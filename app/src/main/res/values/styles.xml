<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="segment">
        <item name="sc_border_width">1dp</item>
        <item name="sc_checked_text_color">@android:color/black</item>
        <item name="sc_corner_radius">4dp</item>
        <item name="sc_tint_color">@android:color/white</item>
    </style>

    <style name="segmentRadioButton">
        <item name="android:textColor">@drawable/segment_filter_text_selector</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <item name="product_attribute" type="id"/>
    <item name="product_sale" type="id"/>
    <item name="product_other" type="id"/>
</resources>
